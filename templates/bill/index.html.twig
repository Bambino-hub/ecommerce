<link rel="stylesheet" href="{{ asset('assets/styles/bootstrap.min.css') }}" />
<div class="container">
  <h2>Facture n:{{ order.id }}</h2>
  <hr />

  <span>Date: {{ order.createdAt | date }}</span>
  <hr />
  <h3>Information du client</h3>
  <table class="table">
    <thead>
      <th>firstname</th>
      <th>lastname</th>
      <th>telephone</th>
      <th>Adress</th>
      <th>ville</th>
    </thead>
    <tbody>
      <tr>
        <td>{{ order.firstname }}</td>
        <td>{{ order.lastname }}</td>
        <td>{{ order.telephone }}</td>
        <td>{{ order.address }}</td>
        <td>{{ order.city.name }}</td>
      </tr>
    </tbody>
  </table>

  <h4>Corps de la commande</h4>
  <table class="table">
    <thead>
      <th>Product name</th>
      <th>Pix unitaire</th>
      <th>Product quantity</th>
    </thead>
    <tbody>
      {% for product in order.orderProducts %}
      <tr>
        <td>{{ product.product.name }}</td>
        <td>{{ product.product.Price }}</td>
        <td>{{ product.qte }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  <p>prix de livraison</p>
  <p>{{ order.city.shinppingcost }} $</p>
  <hr />
  <h5>Total à payé</h5>
  <p>{{ order.totalPrice }} $</p>
</div>
<hr />
