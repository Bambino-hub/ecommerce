{% extends 'base.html.twig' %} {% block title %}Product index{% endblock %} {%
block body %}
<h1>Bos differnts produits</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Discription</th>
      <th>Price</th>
      <th>Stock</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% for product in products %}
    <tr>
      <td>{{ product.id }}</td>
      <td>{{ product.name }}</td>
      <td>{{ product.discription }}</td>
      <td>{{ product.price }}</td>
      {% if product.stock == 0 %}
      <td>Stock épuisé</td>
      {% else %}
      <td>{{ product.stock }}</td>
      {% endif %}

      <td>
        <a
          class="btn btn-secondary"
          href="{{ path('app_product_show', { id: product.id }) }}"
          >show</a
        >
        <a
          class="btn btn-primary"
          href="{{ path('app_product_edit', { id: product.id }) }}"
          >edit</a
        >
        <a
          class="btn btn-success"
          href="{{ path('app_add_stock', { id: product.id }) }}"
          >Ajouter un stock</a
        >
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="5">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<a class="btn btn-primary" href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
