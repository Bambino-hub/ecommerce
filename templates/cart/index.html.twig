{% extends 'base.html.twig' %} {% block title %}Hello CartController!{% endblock
%} {% block body %}
<table class="table table-borderd">
  <thead>
    <th>Product Name</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>total price</th>
    <th>action</th>
  </thead>
  <tbody>
    {% for cartWithData in cardWithDatas %}

    <tr>
      <td>{{ cartWithData.product.name }}</td>
      <td>{{ cartWithData.product.price }}</td>
      <td>{{ cartWithData.quantity }}</td>
      <td>{{ cartWithData.product.price * cartWithData.quantity }}</td>
      <td>
        <a
          href="{{
            path('app_remove_to_cart', { id: cartWithData.product.id })
          }}"
          class="btn btn-outline-success"
          >Delete Cart</a
        >
      </td>
    </tr>
    {% else %}
    <p>Your cart is empty</p>
    {% endfor %}
  </tbody>
</table>
{% if total > 0 %}

<h2 class="mt-3">Total: {{ total }}$</h2>
<a href="" class="btn btn-outline-primary me-3">Valider la commande</a>
<a href="{{ path('app_remove_cart') }}" class="btn btn-outline-danger"
  >Supprimer la commande</a
>
{% endif %} {% endblock %}
