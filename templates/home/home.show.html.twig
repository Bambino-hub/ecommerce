{% extends "base.html.twig" %} {% block title %}voir le produit{% endblock %} {%
block body %}
<div class="card mb-3" style="max-width: 640px">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{ vich_uploader_asset(product, "imagefile") }}"
      alt="product_image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{ product.name }}</h5>
        <p class="card-text">{{ product.discription }}</p>
        <p class="card-text">
          <a
            class="btn btn-success"
            href="{{ path('app_add_to_cart', { id: product.id }) }}"
            class="btn btn-primary"
            >Ajouter au panier</a
          >
        </p>
      </div>
    </div>
  </div>
</div>

{% endblock %}
